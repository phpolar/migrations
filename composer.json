{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "phpolar/migrations",
    "description": "Adds support for running database migrations in your application",
    "type": "library",
    "require-dev": {
        "phan/phan": "~6.0.0-beta",
        "php-coveralls/php-coveralls": "^2.7.0",
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "^4"
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=8.4",
        "php-contrib/migration": "^1.0",
        "psr/log": "^3.0.2"
    },
    "autoload": {
        "psr-4": {
            "Phpolar\\Migrations\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/__classes__/Migration1765073576565CreateSomeRandomTable.php",
            "tests/__classes__/Migration1765073576566CreateSomeRandomTable.php",
            "tests/__classes__/Migration1765073576567CreateSomeRandomTable.php"
        ]
    },
    "license": "MIT",
    "scripts": {
        "analyze:strict": "phan --no-progress-bar --strict-type-checking --analyze-twice --color --output-mode=text --color-scheme=light",
        "ci:analyze": "@analyze",
        "ci:lint": "@lint",
        "ci:lint-fix": "@lint-fix",
        "ci:test-build": [
            "@test --configuration=phpunit.xml --testsuite unit",
            "@test --configuration=phpunit.xml --testsuite acceptance --testdox"
        ],
        "ci:generate-coverage-badge": [
            "@test --configuration=phpunit.ci.xml",
            "composer exec \"php-coveralls -v\""
        ],
        "acceptance-report-format": "sed -i -E -e '1i # Acceptance Test Report\\n' -e 's/^(\\S)/## \\1/' -e 's/^(## .*)$/\\1\\n/' -e 's/^ \\[/- [/' -e '$d' acceptance-test-results.md",
        "test:acceptance": "@test --configuration=phpunit.xml --testsuite acceptance",
        "test:acceptance:report": [
            "@test:acceptance --testdox-text acceptance-test-results.md",
            "@acceptance-report-format"
        ],
        "docs:generate": "composer exec \"docker run --rm -v \"$(pwd):/data\" \"phpdoc/phpdoc:3\" --setting graphs.enabled=true\"",
        "lint": "phpcs",
        "lint-fix": "phpcbf",
        "test": "phpunit"
    }
}
